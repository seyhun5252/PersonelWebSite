@using EntityLayer.Abstract
@model List<About> 




<div class="container-fluid py-5" id="about">
    <div class="container">
        <div class="position-relative d-flex align-items-center justify-content-center">
            <h1 class="display-1 text-uppercase text-white" style="-webkit-text-stroke: 1px #dee2e6;">About</h1>
            <h1 class="position-absolute text-uppercase text-primary">About Me</h1>
        </div>
        @foreach (var item in Model)
        {
            <div class="row align-items-center">
                <div class="col-lg-5 pb-4 pb-lg-0">
                    <img class="img-fluid rounded w-100" src="~/aboutImage/@item.Url" alt="">
                </div>
                <div class="col-lg-7">


                    <h3 class="mb-4">@item.AboutTitle</h3>
                    <p>@item.AboutDescription</p>
                    <div class="row mb-3">
                        <div class="col-sm-6 py-2"><h6>Name: <span class="text-secondary">@item.AboutName</span></h6></div>
                        <div class="col-sm-6 py-2"><h6>Birthday: <span class="text-secondary">@item.AboutBirthday</span></h6></div>
                        <div class="col-sm-6 py-2"><h6>Degree: <span class="text-secondary">@item.AboutDegree</span></h6></div>
                        <div class="col-sm-6 py-2"><h6>Experience: <span class="text-secondary">@item.AboutExperience</span></h6></div>
                        <div class="col-sm-6 py-2"><h6>Phone: <span class="text-secondary">@item.AboutPhone</span></h6></div>
                        <div class="col-sm-6 py-2"><h6>Email: <span class="text-secondary">@item.AboutEmail</span></h6></div>
                        <div class="col-sm-6 py-2"><h6>Address: <span class="text-secondary">@item.AboutAdress</span></h6></div>
                    </div>
                    
                </div>
            </div>
        }
        </div>
</div>