@model PersonelWebSite.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Profil Düzenleme Sayfası</h1>

<form method="post" enctype="multipart/form-data">
    @Html.Label("Adınız")
    <input type="text" asp-for="name" class="form-control" />
    <br />
    @Html.Label("Soyadınız")
    <input type="text" asp-for="surname" class="form-control" />
    <br />

    @Html.Label("Kullanıcı Adınız")
    <input type="text" asp-for="userName" class="form-control" />
    <br />
    @Html.Label("Mail Adresiniz")
    <input type="text" asp-for="mail" class="form-control" />
    <br />
    @Html.Label("Şiferniz")
    <input type="password" asp-for="password" class="form-control" />
    <br />
    @Html.Label("Şife Tekrarı")
    <input type="password" asp-for="password" class="form-control" />
    <br />
    <div  class="form-group">
        <label>Resim Seçin</label>
        <input type="file" asp-for="imageURL"/>
    </div>
    <br />

    <button class="btn btn-primary">Bilgileri Güncelle</button>


</form>

